@model IEnumerable<Form3.Models.userdb>

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/MyCutsom/MyCustom.js"></script>
<script src="~/Scripts/bootstrap.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h2 class="text-center">List</h2>

@{
    ViewBag.Title = "Index";
    var grid = new WebGrid(source: Model, canPage: true, rowsPerPage: 10);
    grid.Pager(WebGridPagerModes.All);
}

<div class="justify-content-center col-12" id="gridContent" font-family: Arial; padding: 20px;">
    @grid.GetHtml(tableStyle: "webgrid-table text-center",
    headerStyle: "webgrid-header",
    footerStyle: "webgrid-footer",
    alternatingRowStyle: "webgrid-alternating-row",
    selectedRowStyle: "webgrid-selected-row",
    rowStyle: "webgrid-row-style",
    mode: WebGridPagerModes.All,
    columns: grid.Columns(
        grid.Column("ID", format: @<text><span class="display-mode" style="font-size:17px;">@item.userid</span><label id="userid" class="edit-mode">@item.userid</label></text>,
style: "col1Width"),
grid.Column("ImagePath", "ImagePath", format: @<text> <span class="display-mode" style="font-size:17px;"><img src="@Url.Content(item.ImagePath)" height="80" width="80" /></span>
    <input type="file" id="ImageText" value="@Url.Content(item.ImagePath)" class="edit-mode" style="width:80px;" /></text>, style: "col10Width"),
grid.Column("Name", "User_Name", format: @<text><span class="display-mode" style="font-size:17px;"><label id="lblName">@item.User_Name</label></span>
<input type="text" id="NameText" value="@item.User_Name" class="edit-mode" style="width:100px;" /></text>, style: "col1Width"),

grid.Column("Email", "Email", format: @<text> <span class="display-mode" style="font-size:17px;"><label id="lblEmail">@item.Email</label></span>
<input type="email" id="EmailText" value="@item.Email" class="edit-mode" /></text>, style: "col10Width"),

grid.Column("Contact", "Contact", format: @<text> <span class="display-mode" style="font-size:17px"><label id="lblContact">@item.Contact</label></span>
<input type="number" id="ContactText" value="@item.Contact" class="edit-mode" style="width:80px" /></text>, style: "col10Width"),

grid.Column("Gender", "Gender", format: @<text> <span class="display-mode" style="font-size:17px"><label id="lblGender">@item.Gender</label></span>
<div class="edit-mode">
    <div class="d-inline-flex">
        <input id="Male" type="radio" name="Gender" value="Male" checked=""><label for="Male" class="p-1">Male</label>
        <input id="Female" type="radio" name="Gender" value="Female"><label for="Female" class="p-1">Female</label>
        <input id="Other" type="radio" name="Gender" value="Other"><label for="Other" class="p-1">Other</label>
    </div>
</div></text>, style: "col1Width"),

grid.Column("Date_Of_Birth", "Date_Of_Birth", format: @<text> <span class="display-mode" style="font-size:17px"><label id="lblDob">@item.Date_Of_Birth</label></span>
<input type="date" id="DateOfBirthText" value="@item.Date_Of_Birth" class="edit-mode" style="width:85px;" /></text>, style: "col1Width"),

grid.Column("Address", "Address", format: @<text> <span class="display-mode" style="font-size:17px"><label id="lblAddress">@item.Address</label></span>
                                                  <textarea type="text" rows="3" id="AddressText" class="edit-mode" style="resize:none">@item.Address</textarea></text>, style: "col1Width"),

grid.Column("Country", "Country", format: @<text> <span class="display-mode" style="font-size:17px"><label id="lblCountry">@item.Country</label></span>
<select name="Countries" type="text" id="CountryText" class="edit-mode" style="width:70px;"><option value="India">India</option></select></text>, style: "col1Width"),
grid.Column("State", "State", format: @<text> <span class="display-mode" style="font-size:17px"><label id="lblState">@item.State</label></span>
<select name="States" type="text" id="StateText" class="edit-mode" style="width:70px;"><option value="Delhi">Delhi</option><option value="UttarPardesh">Uttar Pardesh</option></select></text>, style: "col1Width"),
grid.Column("Hobbies", "Hobbies", format: @<text> <span class="display-mode" style="font-size:17px"><label id="lblHobbies">@item.Hobbies</label></span>
<input type="text" id="HobbiesText" value="@item.Hobbies" class="edit-mode" /></text>, style: "col10Width"),




grid.Column("Action", format: @<text>
    <button class="edit-user display-mode">Edit</button>
    <button class="save-user edit-mode">Save</button>
    <button class="cancel-user edit-mode">Cancel</button>
</text>, style: "col10Width", canSort: false)
))
</div>
